@using Microsoft.AspNetCore.Http
<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ProjetoFullStack</title>
    <link rel="stylesheet" href="~/css/style.css">
    <link rel="stylesheet" href="~/css/bannerPromocao.css">
    <link rel="stylesheet" href="~/css/faixaPromocao.css">
    <link rel="stylesheet" href="~/css/faixaMarcas.css">
    <link rel="stylesheet" href="~/css/produtoDetalhe.css">
    <link rel="stylesheet" href="~/css/faleconosco.css">
    <link rel="stylesheet" href="~/css/produtos.css">
     <link rel="stylesheet" href="~/css/carrinho.css">
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@100;300;700&display=swap" rel="stylesheet">
     <!-- <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
  <link rel="stylesheet" href="~/css/site.css" />-->
</head>
<body>
   <header>
          
        <nav class="navegacao">
            <ul>
                <li class="logo">Fabricio Alves</li>
                <li><input type="text" placeholder="pesquise seu produto" class="inputmenu"></li>
                <li ><a asp-controller="Home" asp-action="Index">home</a></li>
                <li ><a asp-controller="Home" asp-action="" >produtos</a></li>
                <li ><a asp-controller="Home" asp-action="" >fale conosco</a></li>
                <li ><a asp-controller="Usuario" asp-action="Login" >Login</a></li>
                <li>
                    @if(Context.Session.GetInt32("idUsuario") != null)
                {
                <span>Olá @Context.Session.GetString("nomeUsuario")<a asp-controller="Usuario" asp-action="Logout"> sair </a></span>
                }
                </li>
                
                <li ><a asp-controller="" asp-action="" >Carrinho</a></li>
            </ul>
              
        </nav>
         @if(Context.Session.GetInt32("idUsuario") != null && Context.Session.GetInt32("tipoUsuario") != 1)
                {
                    <section class="menu-column menuGerencia">
                        <section class="menu-column-links">
                        <ul>
                            <li ><a asp-controller="Usuario" asp-action="cadastro">Cadastro de Usuarios</a></li>
                            <li ><a asp-controller="Usuario" asp-action="Listar" >Lista de Usuarios</a></li>
                            <li ><a asp-controller="Produtos" asp-action="Cadastro" >Cadastro de Produtos</a></li>
                            <li ><a asp-controller="Produtos" asp-action="Listar" >Lista de Produtos</a></li>
                        </ul>
                        </section>
                    </section>
                }
                  @if(Context.Session.GetInt32("idUsuario") != null && Context.Session.GetInt32("tipoUsuario") != 0)
                {
                    <section class="menu-column menuGerencia">
                        <section class="menu-column-links">
                        <ul>
                            <li ><a asp-controller="Usuario" asp-action="cadastro">Cadastro de Usuarios</a></li>
                            <li ><a asp-controller="Usuario" asp-action="ListarColab" >Lista de Usuarios</a></li>
                            <li ><a asp-controller="Produtos" asp-action="Cadastro" >Cadastro de Produtos</a></li>
                            <li ><a asp-controller="Produtos" asp-action="ListarColab" >Lista de Produtos</a></li>
                        </ul>
                        </section>
                    </section>
                }
                  
       
    </header>
    
    <div>
        <main>
           
                  
            @RenderBody()
        </main>
    </div>

     <footer class="rodape">
        <p>Copyright ©2020 - 2020 www.fabricioalves.com.br, TODOS OS DIREITOS RESERVADOS</p>
    </footer>
</body>
</html>
