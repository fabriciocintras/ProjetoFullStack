@model IEnumerable<Usuario>
@{     ViewData["Title"] = "Listagem de Usu√°rio"; } 
<h2>Listagem de usuario</h2>
<table>
    <thead>
        <tr>
            <th>Id</th>
            <th>Nome</th>
            <th>Login</th>
            <th>Senha</th>
        </tr>
    </thead>
    <tbody>
        @foreach (Usuario i in Model)
        {
           <tr>
               <td>@i.Id</td>
               <td>@i.Nome</td>
               <td>@i.Login</td>
               <td>@i.Senha</td>
           </tr> 
        }
    </tbody>
</table>